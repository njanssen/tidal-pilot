-- Set tempo to 1 CPS (which sets Pilot to 120 BPM)
setcps 1.0

d1 $ fast 2 $ every 4 (# octave 3) $ struct "~ ~ 1" $ s "6" # n "<c e>" # octave 4

d2 $ struct "1(3,12)" $ while "1 <1 0> 0" (hurry 4) $ s "5" # n "[c2,e2,f2]" # velocity 1.0

d3 $ struct "1(<2 4>,6)" $ s "c" # octave 1 # n "0 .. 7"

-- Add some effects by typing extra commands in Pilot: REV06 / CHO50

hush